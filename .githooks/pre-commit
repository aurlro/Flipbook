#!/bin/sh

# Couleurs pour une meilleure lisibilit√©
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "${YELLOW}üîç D√©marrage des v√©rifications pre-commit...${NC}"

# V√©rifier que nous sommes dans un environnement virtuel
if [ -z "$VIRTUAL_ENV" ]; then
    echo "${RED}‚ùå Erreur: Veuillez activer votre environnement virtuel${NC}"
    exit 1
fi

# Sauvegarder les fichiers Python modifi√©s
STAGED_PY_FILES=$(git diff --cached --name-only --diff-filter=d | grep ".py$")

if [ -n "$STAGED_PY_FILES" ]; then
    echo "${YELLOW}üìù V√©rification du formatage Python...${NC}"
    
    # Formatage avec Black
    echo "Running black..."
    black --check $STAGED_PY_FILES
    if [ $? -ne 0 ]; then
        echo "${RED}‚ùå Erreur de formatage Black. Ex√©cutez 'black .' et recommitez${NC}"
        exit 1
    fi

    # V√©rification des imports avec isort
    echo "${YELLOW}üìã V√©rification des imports...${NC}"
    isort --check-only $STAGED_PY_FILES
    if [ $? -ne 0 ]; then
        echo "${RED}‚ùå Erreur d'import. Ex√©cutez 'isort .' et recommitez${NC}"
        exit 1
    fi

    # Linting avec flake8
    echo "${YELLOW}üîç V√©rification du style...${NC}"
    flake8 $STAGED_PY_FILES
    if [ $? -ne 0 ]; then
        echo "${RED}‚ùå Erreur de style. Corrigez les probl√®mes et recommitez${NC}"
        exit 1
    fi

    # Tests avec pytest
    echo "${YELLOW}üß™ Ex√©cution des tests...${NC}"
    pytest
    if [ $? -ne 0 ]; then
        echo "${RED}‚ùå Certains tests ont √©chou√©. Corrigez-les et recommitez${NC}"
        exit 1
    fi
fi

# V√©rification des fichiers JavaScript
STAGED_JS_FILES=$(git diff --cached --name-only --diff-filter=d | grep ".js$")

if [ -n "$STAGED_JS_FILES" ]; then
    echo "${YELLOW}üîç V√©rification des fichiers JavaScript...${NC}"
    
    # Si vous avez ESLint install√©
    if command -v eslint >/dev/null 2>&1; then
        eslint $STAGED_JS_FILES
        if [ $? -ne 0 ]; then
            echo "${RED}‚ùå Erreurs ESLint d√©tect√©es. Corrigez-les et recommitez${NC}"
            exit 1
        fi
    fi
fi

echo "${GREEN}‚úÖ Toutes les v√©rifications sont pass√©es avec succ√®s !${NC}"
exit 0